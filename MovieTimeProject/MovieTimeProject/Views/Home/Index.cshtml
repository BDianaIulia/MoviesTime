@model MovieTimeProject.Controllers.ViewModelHomePage

@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <link href="~/css/generalLayout.css" type="text/css" rel="stylesheet" />
</head>

<body>
    <div class="content">

        <h1>Latest movies</h1>

        <div class="scrollableGallery">
            @for (var i = 0; i < Model.latestList.Count(); i++)
            {
                <div class="gallery">
                    <a href="@Url.Action("Details", "Movies", Model.latestList.ElementAt(i)) ">
                        <img src="@Url.Content(String.Format("~/coverPhotos{0}", Model.latestList.ElementAt(i).PosterPath))">
                    </a>
                </div>
            }
        </div>

        <h1>Top rated movies</h1>

        <div class="scrollableGallery">

            @for (var i = 0; i < Model.topRatedList.Count(); i++)
            {
                <div class="gallery">
                    <a href="@Url.Action("Details", "Movies", Model.topRatedList.ElementAt(i)) ">
                        <img src="@Url.Content(String.Format("~/coverPhotos{0}", Model.topRatedList.ElementAt(i).PosterPath))">
                    </a>
                </div>

            }

        </div>

        <h1>Movies that might interests you</h1>

        <div class="scrollableGallery">

            @for (var i = 0; i < Model.interestList.Count(); i++)
            {
                <div class="gallery">
                    <a href="@Url.Action("Details", "Movies", Model.interestList.ElementAt(i)) ">
                        <img src="@Url.Content(String.Format("~/coverPhotos{0}", Model.interestList.ElementAt(i).PosterPath))">
                    </a>
                </div>
            }


        </div>

    </div>

</body>
</html>